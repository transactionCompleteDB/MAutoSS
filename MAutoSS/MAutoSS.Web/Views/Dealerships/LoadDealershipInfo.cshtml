@model IEnumerable<MAutoSS.Web.Models.Dealership.DealershipMainInfoViewModel>

@Html.Partial("DealershipOptionsPartial")

@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(d => d.Name).Title("Dealership Name").Width(200);
        columns.Bound(d => d.NumberOfEmployees).Title("Number of employees").Width(200);
        columns.Bound(d => d.NumberOfCars).Title("Number of cars").Width(200);
        columns.Bound(d => d.Address.AddressText).Title("Address").Width(200);
        columns.Bound(d => d.Address.City.Name).Title("City").Width(200);
        columns.Bound(d => d.Address.City.Country.Name).Title("Country").Width(200);

    })
    .HtmlAttributes(new { style = "height: 550px;" })
    .Pageable(pageable => pageable
       .Input(true)
       .Numeric(false)
     )
    .Sortable()
    .Scrollable(scr => scr.Height(430))
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
     )
)