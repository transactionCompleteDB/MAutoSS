@model  IEnumerable<MAutoSS.Web.Models.Customer.CustomerModel>

@Html.Partial("CustomerOptionsPartial")

@if (Model.Count() > 0)
{
    <div class="container-fluid dealerships-container">
        <div class="row">
            <h3>Customers info</h3>
        </div>
        @(Html.Kendo().Grid(Model)
    .Name("CustomersInfo")
    .Columns(columns =>
    {
        columns.Bound(e => e.FirstName).Title("First name").Width(190);
        columns.Bound(e => e.LastName).Title("Last name").Width(190);
        columns.Bound(e => e.Discount).Title("Discount").Width(190);

    })
    .HtmlAttributes(new { style = "height: 550px;" })
    .Pageable(pageable => pageable
   .Input(true)
   .Numeric(false))
         .Sortable()
         .Scrollable(scr => scr.Height(430))
         .Filterable()
         .DataSource(dataSource => dataSource
         .Ajax()
         .PageSize(20)
    )
        )
    </div>
}
else
{
    <h2>There are no records for customers.</h2>
}
